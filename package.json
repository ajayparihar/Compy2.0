{
  "name": "compy-2.0",
  "version": "2.0.0",
  "description": "Compy 2.0 - A lightweight, offline-first clipboard and snippet manager",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:integration": "playwright test",
    "dev": "serve -s . -p 3000",
    "build": "echo 'No build step needed for vanilla JS app'",
    "lint": "eslint js/**/*.js",
    "format": "prettier --write js/**/*.js"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.40.0",
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.0",
    "serve": "^14.2.1"
  },
  "keywords": [
    "clipboard",
    "snippet",
    "manager",
    "offline-first",
    "productivity"
  ],
  "author": "Bheb Developer",
  "license": "MIT"
}
